    <span>Male</span>  @Html.RadioButton("Gender", "Male",true)
    <span>FeMale</span>@Html.RadioButton("Gender", "FeMale")
<br />
    @Html.DropDownList("Country",new List<SelectListItem>(){
        new SelectListItem { Text = "India", Value = "1",Selected=true },
        new SelectListItem { Text = "Australia", Value = "2" },
        new SelectListItem {Text="Bangladesh",Value="3" },
    },"Selct Country"
    )

</form>