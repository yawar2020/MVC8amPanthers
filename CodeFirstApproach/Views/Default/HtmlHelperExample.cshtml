@model   CodeFirstApproach.Models.EmployeeModel
@{
    ViewBag.Title = "HtmlHelperExample";
}

<script>
    function fun() {
        alert('fun have Been Called');
    }
</script>

<h2>HtmlHelperExample</h2>
